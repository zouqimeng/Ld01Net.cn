<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net-net-2.0"/>
  </configSections>
  <log4net>
    <root>
      <appender-ref ref="ErrorLogFileAppender"/>
      <appender-ref ref="WarningFileAppender"/>
      <appender-ref ref="DebugLogFileAppender"/>
      <appender-ref ref="InfoLogFileAppender"/>
      <!--控制台控制显示日志-->
      <appender-ref ref="ConsoleAppender" />
    </root>

    <!--记录warning-->
    <appender name="WarningFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--日志文件名开头-->
      <file value="Log\Warn\"/>
      <appendToFile value="true"/>
      <!--最大变换数量-->
      <maxSizeRollBackups value="10"/>
      <!--最大文件大小-->
      <maximumFileSize value="1MB"/>
      <!--混合使用日期和文件大小变换日志文件名-->
      <rollingStyle value="Date"/>
      <staticLogFileName value="false"/>
      <!--文件名称-->
      <DatePattern value="Warn_yyyy_MM_dd &quot;.log&quot;"></DatePattern>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%date] [%t] %newline日志类型：[%logger]%newline日志等级：[%-5level]%newline警告信息：%message %newline%newline"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="WARN"/>
        <param name="LevelMax" value="WARN"/>
      </filter>
    </appender>
    <!--记录错误-->
    <appender name="ErrorLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Log\Error\"/>
      <appendToFile value="true"/>
      <maxSizeRollBackups value="10"/>
      <maximumFileSize value="1MB"/>
      <!--混合使用日期和文件大小变换日志文件名-->
      <rollingStyle value="Date"/>
      <staticLogFileName value="false"/>
      <!--文件名称-->
      <DatePattern value="Error_yyyy_MM_dd &quot;.log&quot;"></DatePattern>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%date] [%t] %newline日志类型：[%logger] %newline日志等级：[%p] %newline错误信息：%message %newline %newline"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="ERROR"/>
        <param name="LevelMax" value="ERROR"/>
      </filter>
    </appender>
    <!--记录调试日志-->
    <appender name="DebugLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Log\Debug\"/>
      <param name="AppendToFile" value="true"/>
      <param name="MaxSizeRollBackups" value="10"/>
      <param name="MaximumFileSize" value="1MB"/>
      <param name="StaticLogFileName" value="false"/>
      <param name="RollingStyle" value="Date"/>
      <!--文件名称-->
      <DatePattern value="DEBUG_yyyy_MM_dd &quot;.log&quot;"></DatePattern>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="[%date] [%t]%newline日志类型：[%logger]%newline日志等级：[%p] %newline调试信息：%m %newline%newline"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="DEBUG"/>
        <param name="LevelMax" value="DEBUG"/>
      </filter>
    </appender>
    <!--Info错误-->
    <appender name="InfoLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Log\Info\"/>
      <appendToFile value="true"/>
      <maxSizeRollBackups value="10"/>
      <maximumFileSize value="1MB"/>
      <!--混合使用日期和文件大小变换日志文件名-->
      <rollingStyle value="Date"/>
      <staticLogFileName value="false"/>
      <!--文件名称-->
      <DatePattern value="Info_yyyy_MM_dd &quot;.log&quot;"></DatePattern>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%date] [%t]%newline日志类型：[%logger]%newline日志等级：[%p] %newline日志内容：%message %newline %newline"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="INFO"/>
        <param name="LevelMax" value="INFO"/>
      </filter>
    </appender>
    <!--调试模式，输出日志到控制台-->
    <appender name="ConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR"/>
        <foreColor value="Red, HighIntensity"/>
        <!--<backColor value="Green" />-->
      </mapping>
      <mapping>
        <level value="DEBUG"/>
        <foreColor value="Yellow, HighIntensity"/>
        <!--<backColor value="Green"/>-->
      </mapping>
      <mapping>
        <level value="INFO"/>
        <foreColor value="Green, HighIntensity"/>
        <!--<backColor value="Green"/>-->
      </mapping>
      <mapping>
        <level value="Warn"/>
        <foreColor value="Red   , HighIntensity"/>
        <!--<backColor value="Green"/>-->
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <footer value="--------------------------------------------------------------------"/>
        <!--<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss,fff}][%p] [%t] [%c]- %m%n"/>-->
        <param name="ConversionPattern" value="[%date][%t]%newline日志类型：[%logger]%newline日志等级：[%p]%newline日志信息：%message %n%n"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="DEBUG"/>
        <param name="LevelMax" value="ERROR"/>
      </filter>
    </appender>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
</configuration>